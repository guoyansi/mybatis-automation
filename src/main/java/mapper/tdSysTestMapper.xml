		</if>
    </select>
    <select id="selectOne" parameterType="bean.in.TdSysTestInBean" resultType="bean.out.TdSysTestOutBean">
		select name as namesid as sid from td_sys_test
        <if test="sqlWhere!=null">
            <where>${sqlWhere}</where>
        </if>
    </select>
    <select id="getCount" parameterType="bean.in.TdSysTestInBean" resultType="int">
		select count(*) from td_sys_test
        <if test="sqlWhere!=null">
            <where>${sqlWhere}</where>
        </if>
    </select>
    <update id="update" parameterType="bean.TdSysTestBean">
		update td_sys_test
        <set>
            <if test="name==null">name=null,</if>
            <if test="name!=null">name=#{name},</if>
            <if test="sid==null">sid=null,</if>
            <if test="sid!=null">sid=#{sid},</if>
        </set>
        <if test="sqlWhere!=null">
            <where>${sqlWhere}</where>
        </if>
    </update>
    <insert id="insert" parameterType="bean.TdSysTestBean">
		insert into td_sys_test
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name!=null">name,</if>
            <if test="sid!=null">sid,</if>
        </trim>
 			values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name!=null">#{name},</if>
            <if test="sid!=null">#{sid},</if>
        </trim>
    </insert>
    <delete id="delete" parameterType="bean.TdSysTestBean">
		DELETE FROM td_sys_test
        <if test="sqlWhere !=null">
            <where>${sqlWhere}</where>
        </if>
    </delete>
</mapper>
