<mapper namespace="dao.ITdSysTestDao">
    <select id="selectList" parameterType="bean.in.TdSysTestInBean" resultType="bean.out.TdSysTestOutBean">
		
        <if test="sqlLimit==true">
			select * from (
		</if>
		 select A.*,  rowNum from (
		 	select name as name,sid as sid from td_sys_test
        <where>
            <if test="name!=null">and name=#{name}</if>
            <if test="sid!=null">and sid=#{sid}</if>
            <if test="sqlWhere!=null">${sqlWhere}</if>
        </where>
        <if test="sqlOrderBy!=null">order by ${sqlOrderBy}</if>
			) A
